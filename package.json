{
  "name": "transvolve",
  "version": "0.0.3",
  "description": "A reactive ECS engine.",
  "main": "./lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "doc": "jsdoc src -c jsdoc.json -r -d doc -R README.md",
    "test": "cross-env BABEL_ENV=commonjs mocha --compilers js:babel-register --recursive",
    "test:watch": "npm test -- --watch",
    "test:examples": "node example/",
    "cover": "cross-env BABEL_ENV=commonjs istanbul cover _mocha -- --compilers js:babel-register --recursive",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js  && rm -rf ./coverage",
    "lint": "eslint src test",
    "build": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "prepublish": "npm run clean && npm run lint && npm run test && npm run build"
  },
  "files": [
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joechimo/transvolve.git"
  },
  "keywords": [
    "javascript",
    "ecs",
    "entity",
    "component"
  ],
  "author": "Joseph Cimaszewski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joechimo/transvolve/issues"
  },
  "homepage": "https://github.com/joechimo/ecs-js#readme",
  "dependencies": {
    "bluebird": "3.4.6",
    "errors": "0.3.0",
    "es6-symbol": "3.1.0",
    "eventemitter3": "2.0.1",
    "lodash": "4.16.1"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.10.1",
    "babel-eslint": "^6.1.0",
    "babel-istanbul": "^0.11.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-2": "^6.11.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "cross-env": "^2.0.0",
    "coveralls": "^2.11.14",
    "esdoc": "^0.4.8",
    "esdoc-es7-plugin": "^0.0.3",
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.10.0",
    "eslint-plugin-jsx-a11y": "^1.5.3",
    "eslint-plugin-mocha": "^4.5.1",
    "eslint-plugin-react": "^5.2.2",
    "istanbul": "^1.0.0-alpha",
    "jsdoc": "^3.4.1",
    "loke-jsdoc-theme": "^2.1.0",
    "mocha": "^3.0.0",
    "mocha-lcov-reporter": "^1.2.0",
    "rimraf": "^2.5.2",
    "sinon": "^1.17.6"
  },
  "directories": {
    "lib": "lib",
    "doc": "doc",
    "example": "example",
    "test": "test"
  }
}
